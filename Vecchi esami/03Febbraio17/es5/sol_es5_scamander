...fine documento

<script>
    $(document).ready(function(){
        $("button").click(function(){
            if(this.innerHTML == "newDoc"+(1|2|3)+".htm")
                $("p#prima_zona").load(this.innerHTML, function(responseTxt, statusTxt, xhr){
                    if(statusTxt=="error")
                        alert("Errore "+ xhr.status + ":" + xhr.statusText);
            });
            else if(this.innerHTML == "newDoc" + (4|5|6) + ".htm")
                $("p#seconda_zona").load(this.innerHTML, function(responseTxt, statusTxt, xhr){
                    if(statusTxt=="error")
                        alert("Errore "+ xhr.status + ":" + xhr.statusText);    
            });
            else
                $("p#terza_zona").load(this.innerHTML, function(responseTxt, statusTxt, xhr){
                    if(statusTxt=="error")
                        alert("Errore "+ xhr.status + ":" + xhr.statusText);
            });

            $("div").load(this.innerHTML, function(responseTxt, statusTxt, xhr){
                if(statusTxt=="error")
                    alert("Errore " + xhr.status + ":" + xhr.statusText);
            });
        });
    });
</script>
<!--da testare-->
